<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utn.mobile.keepapp.UsuarioFragment"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_profile_pic"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="0dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/keepapp_launcher_round"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFF"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="KeepApp"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="jusalis@gmail.com"
        android:textColor="@color/monsoon"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_link_account"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

</LinearLayout>
